# Follow redirects by default
location

# When following a redirect, automatically set the previous URL as referer.
referer = ";auto"

# Show errors if they occur
show-error

# Fail on HTTP errors (non-2xx/3xx exit code)
fail

# Disguise as Chrome on Windows 10.
user-agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/139.0.0.0 Safari/537.36"

# Progress bar instead of download stats (nicer for interactive use)
progress-bar

# Timeout if the server doesnâ€™t respond
connect-timeout = 60
max-time = 999999999


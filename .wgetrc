# Disguise as Chrome on Windows 10.
user-agent = Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/139.0.0.0 Safari/537.36

# Continue downloads by default
continue = on

# Use progress bar style
progress = bar:force

# Retry downloads automatically
tries = 5
retry_connrefused = on

# Set sensible timeouts
timeout = 30
dns-timeout = 15
connect-timeout = 15
read-timeout = 30

# Restrict to IPv4 (sometimes avoids DNS issues)
inet4-only = on

# Save files with nicer default names
content-disposition = on

# Donâ€™t clobber existing files (append instead)
no-clobber = on

